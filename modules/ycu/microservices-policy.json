{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAllBucketListing",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Sid": "MicroservicesBucketAccess",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:GetBucketLocation",
        "s3:ListObjects",
        "s3:Get"
      ],
      "Resource": [
        "arn:aws:s3:::${chef_boot_bucket}/*",
        "arn:aws:s3:::${chef_boot_bucket}",
        "arn:aws:s3:::${chef_config_bucket}/*",
        "arn:aws:s3:::${chef_config_bucket}",
        "arn:aws:s3:::${elasticsearch_boot_bucket}/*",
        "arn:aws:s3:::${elasticsearch_boot_bucket}",
        "arn:aws:s3:::${consul_bucket}/*",
        "arn:aws:s3:::${consul_bucket}"
      ],
      "Effect": "Allow"
    }
  ]
}