{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowAllBucketListing",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Sid": "MicroservicesBucketAccess",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:GetBucketLocation",
        "s3:ListObjects",
        "s3:Get"
      ],
      "Resource": [
        "${chef_boot_bucket_arn}/*",
        "${chef_boot_bucket_arn}",
        "${chef_config_bucket_arn}/*",
        "${chef_config_bucket_arn}",
        "${elasticsearch_boot_bucket_arn}/*",
        "${elasticsearch_boot_bucket_arn}",
        "${consul_bucket_arn}/*",
        "${consul_bucket_arn}"
      ],
      "Effect": "Allow"
    }
  ]
}